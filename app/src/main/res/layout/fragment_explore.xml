<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.FragmentExplore">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friendCircle"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:gravity="left|center"
            app:srcCompat="@drawable/friendcircle" />

        <TextView
            android:id="@+id/friendCircleText"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="朋友圈"
            android:textSize="25dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/functionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="其他功能"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/baiduMapLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1">

        <ImageView
            android:id="@+id/baidumap"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:gravity="left|center"
            app:srcCompat="@drawable/baidumap" />

        <TextView
            android:id="@+id/baiduMapText"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="百度地图"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>